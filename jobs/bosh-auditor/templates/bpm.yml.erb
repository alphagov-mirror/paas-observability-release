---
processes:
  - name: bosh-auditor

    persistent_disk: true
    additional_volumes:
      - path: /var/vcap/store/bosh-auditor/shipper-cursors
        writable: true
        mount_only: true

    executable: /var/vcap/packages/bosh-auditor/bin/bosh-auditor
    args:
      - --cursor-dir
      - /var/vcap/store/bosh-auditor/shipper-cursors

      - --lookback-duration
      - '<%= p('lookback_duration') %>'

      - --prometheus-listen-port
      - '<%= p('prometheus_listen_port') %>'

      - --bosh-client-id
      - '<%= p('collector.bosh_client_id') %>'

      - --bosh-client-secret
      - '<%= p('collector.bosh_client_secret') %>'

      - --splunk-hec-endpoint
      - '<%= p('shippers.splunk.hec_endpoint') %>'

      - --splunk-token
      - '<%= p('shippers.splunk.token') %>'
